<div class="card table-wrapper">
    <div class="card-body rounded-bottom bg-white p-5">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">Nombres y Apellidos</th>
                    <th class="text-center">Especialista</th>
                    <th class="text-center">Editar</th>
                    <th class="text-center">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each specialists}}
                <tr>
                    <td>{{nombrePersonal}}</td>
                    <td>{{especialidad}}</td>
                    <td><a href="/specialists/{{idEspecialista}}" class="btn btn-info btn-raised btn-xs"><i
                                class="zmdi zmdi-refresh"></i></a>
                    </td>
                    <td><a href="#!" class="btn-delete-specialist btn btn-danger btn-raised btn-xs"
                            data-id="{{idEspecialista}}"><i class="zmdi zmdi-delete"></i></a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4">No hay registros para mostrar</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>