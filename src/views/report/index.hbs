{{>navigation/navigation}}


<script>
    const listRecords = ({{{ convertJson attendanceRecord }}});

    const convertirATotalMinutos = (tiempo) => {
        if (tiempo !== null) {
            const [horas, minutos, segundos] = tiempo.split(":").map(Number);
            const totalMinutos = horas * 60 + minutos + Math.round(segundos / 60);
            return totalMinutos;
        } else {
            return null;
        }
    };

    const listProductSale = (lista) => {
        const horaEntrada = convertirATotalMinutos("08:00:00");
        const horaEntrada2 = convertirATotalMinutos("14:15:00");

        let stringTable = '';
        for (const dato of lista) {
            const minutosPrimeraEntrada = convertirATotalMinutos(dato.primeraEntrada);
            const minustosSegundaEntrada = convertirATotalMinutos(dato.segundaEntrada);

            const primeraTardanza = minutosPrimeraEntrada - horaEntrada2;
            const segundaTardanza = minustosSegundaEntrada - horaEntrada2;

            let fechaISO = dato.fechaRegistro;
            let date = new Date(fechaISO);

            let year = date.getFullYear();
            let month = String(date.getMonth() + 1).padStart(2, '0'); // Los meses en JavaScript son base 0
            let day = String(date.getDate()).padStart(2, '0');

            let fechaFormateada = `${year}-${month}-${day}`;

            let fila = '<tbody><tr scope="col"><td>';
            fila += dato.idPersonal;
            fila += "</td>";
            fila += "<td>";
            fila += dato.nombrePersonal;
            fila += "</td>";
            fila += "<td>";
            fila += fechaFormateada;
            fila += "</td>";
            fila += "<td>";
            if (dato.primeraEntrada !== null) {
                fila += dato.primeraEntrada;
            } else {
                fila += "no marc贸";
            }
            fila += "</td>";
            fila += "<td>";
            if (minutosPrimeraEntrada !== null) {
                if (primeraTardanza >= 60) {
                    const hora = Math.floor(primeraTardanza / 60);
                    const minuto = primeraTardanza % 60;
                    fila += hora + "h " + minuto + " minutos tarde";
                    //console.log(hora + "h con " + minuto + " tarde");
                }

                if (primeraTardanza < 60 && primeraTardanza > 0) {
                    fila += primeraTardanza + " minutos tarde";
                }

                if (primeraTardanza <= 0) {
                    fila += "puntual";
                }
            }
            if (dato.primeraEntrada === null) {
                fila += "no marc贸";
            }

            fila += "</td>";
            fila += "<td>";
            if (dato.segundaEntrada !== null) {
                fila += dato.segundaEntrada;
            } else {
                fila += "no marc贸";
            }
            fila += "</td>";
            fila += "<td>";
            if (minustosSegundaEntrada !== null) {
                if (segundaTardanza >= 60) {
                    const hora = Math.floor(segundaTardanza / 60);
                    const minuto = segundaTardanza % 60;
                    fila += hora + "h " + minuto + " minutos tarde";
                    //console.log(hora + "h con " + minuto + " tarde");
                }

                if (segundaTardanza < 60 && segundaTardanza > 0) {
                    fila += segundaTardanza + " minutos tarde";
                }

                if (segundaTardanza <= 0) {
                    fila += "puntual";
                }
            }
            if (dato.segundaEntrada === null) {
                fila += "no marc贸";
            }

            fila += "</td>";
            fila += "<td>";
            fila += `<a href="#!" class="btn btn-info btn-raised btn-xs"><i
                                                class="zmdi zmdi-refresh"></i></a>`;
            fila += "</td>";
            fila += "<td>";
            fila += `<a href="#!" class="btn btn-danger btn-raised btn-xs"><i
                                                class="zmdi zmdi-delete"></i></a>`;
            fila += "</td>";
            fila += "</tr></tbody>";
            stringTable += fila;
        }
        return stringTable;
    };
    document.getElementById("list").innerHTML =
        listProductSale(listRecords);

    const current = ({{{ convertJson current }}});
    const pages = ({{{ convertJson pages }}});

    const numPages = (num) => {
        let navPages = '';

        if (pages) {
            var i = (Number(current) > 5 ? Number(current) - 4 : 1);
            for (; i <= (Number(current) + 4) && i <= pages; i++) {
                let fila = '<ul class="pagination pagination-sm" id="pagination">';
                if (i == current) {
                    fila += '<li class="active">';
                } else {
                    fila += '<li>';
                }
                if (i === Number(current) - 4 && i < pages) {
                    fila += `<a href="#">...</a>`;
                }
                if (i === Number(current) + 4 && i < pages) {
                    fila += `<a href="#">...</a>`;
                }
                fila += `<a href="/reports/page${i}">${i}</a>`;
                fila += "</li></ul>";
                navPages += fila;
            }
        }
        return navPages
    }
    document.getElementById("pagination").innerHTML =
        numPages(pages);
</script>