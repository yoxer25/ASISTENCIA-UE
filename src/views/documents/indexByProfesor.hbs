<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i> Documentos
                <small>Listado</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Importar Sesi√≥n de Trabajo</small>
                        </h1>
                        <form action="/documents/file/{{idCarpeta}}" method="POST" enctype="multipart/form-data">
                            <div>
                                <label>ARCHIVO PDF</label>
                                <input type="file" accept=".pdf" name="pdfProfesor">
                            </div>
                            <p class="text-center">
                                <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                    <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                            class="zmdi zmdi-upload"></i> Importar</p>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Sesiones de trabajo</small>
                        </h1>
                        <div class="row" style="padding-top: 3%;">
                            {{#each documents}}
                            <div class="col-md-2" style="text-align: center;">
                                <a href="/documents/{{nombreDocumento}}"  target="_blank">
                                    <img src="/assets/img/pdf.png" alt="" width="50%">
                                    <p>{{nombreDocumento}}</p>
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}