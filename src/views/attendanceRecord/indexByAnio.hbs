<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-assignment-o zmdi-hc-fw"></i> Asistencia
                <small>{{year}} : {{IE.nombreInstitucion}} - {{IE.nombreNivel}}</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        {{#if (eq user.name IE.idInstitucion)}}
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Importar Consolidado del Registro de Asistencia</small>
                        </h1>
                        <form action="/attendanceRecords/importExcel" method="POST" enctype="multipart/form-data">
                            <div>
                                <label>ARCHIVO EXCEL</label>
                                <input type="file" accept=".xlsx" name="excelAttendanceRecord">
                                <input type="hidden" value="{{carpeta}}" name="carpeta" id="carpeta">
                            </div>
                            <p class="text-center">
                                <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                    <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                            class="zmdi zmdi-upload"></i> Importar</p>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Registro de asistencia mensual</small>
                        </h1>
                        <div class="row" style="padding-top: 3%;">
                            {{#each documents}}
                            <div class="col-md-2" style="text-align: center;">
                                <a href="/attendanceRecords/download/{{nombreDocumento}}">
                                    <img src="/assets/img/excel.png" alt="" width="100px">
                                    <p>{{nombreOriginal}}</p>
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}