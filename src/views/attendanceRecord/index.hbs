<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-assignment-o zmdi-hc-fw"></i> Asistencia
                <small>Listado</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        {{#if (eq user.user.rol "administrador")}}
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-7" id="formSearchPersonal">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <div class="card-header bg-primary text-center">
                            <p class="text-white" style="font-size: 30px;">Buscar por IE</p>
                        </div>
                        <form action="/attendanceRecords" method="POST">
                            <input type="hidden" class="form-control" name="page" id="page">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="form-group" style="margin: auto;">
                                        <select class="form-control" id="username" name="ie" style="width: 100%;">
                                            <option value="{{ie}}" selected>{{nameIE}}</option>
                                            {{#each institutions}}
                                            <option value="{{idInstitucion}}">{{nombreNivel}} - {{nombreInstitucion}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <div class="form-group" style="margin: auto; text-align: right;">
                                        <button class="btn btn-raised btn-sm"
                                            style="background-color: #01579B; margin: auto;">
                                            <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                                    class="zmdi zmdi-search"></i> Consultar</p>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <div class="row" style="margin-bottom: 20px;">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Registro de asistencia mensual</small>
                        </h1>
                        <div class="row" style="padding-top: 3%;">
                            {{#each anios}}
                            <div class="col-md-2" style="text-align: center;">
                                <a href="/attendanceRecords/file/{{nombreAnio}}_{{ie}}">
                                    <img src="/assets/img/folder.png" alt="" width="50%">
                                    <p>{{nombreAnio}}</p>
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}