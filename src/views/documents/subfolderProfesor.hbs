<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-collection-pdf zmdi-hc-fw"></i> Carpetas
                <small>{{dataPersonal.nombrePersonal}}</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 20px;">
            {{#if (eq user.rol "directivo")}}
            <div class="col-lg-12" id="formSearchPersonal">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <div class="card-header bg-primary text-center">
                            <p class="text-white" style="font-size: 30px;">Agregar Carpeta</p>
                        </div>
                        <form action="/documents/folder/{{idCarpeta}}" id="consultPersonal" method="POST">
                            <input type="hidden" class="form-control" name="page" id="page">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="form-group" style="margin: auto;">
                                        <select class="form-control" id="username" name="subFolder" style="width: 100%;">
                                            <option value="PLANIFICACIÓN ANUAL" selected>PLANIFICACIÓN ANUAL</option>
                                            <option value="UNIDADES DIDÁCTIVAS">UNIDADES DIDÁCTIVAS</option>
                                            <option value="SESIONES DE APRENDIZAJE">SESIONES DE APRENDIZAJE</option>
                                            <option value="PLAN DE TUTORÍA">PLAN DE TUTORÍA</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <div class="form-group" style="margin: auto; text-align: right;">
                                        <button class="btn btn-raised btn-sm"
                                            style="background-color: #01579B; margin: auto;">
                                            <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                                    class="zmdi zmdi-floppy"></i> Agregar</p>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Sesiones de trabajo</small>
                        </h1>
                        <div class="row" style="padding-top: 3%;">
                            {{#each subfolder}}
                            <div class="col-md-2" style="text-align: center;">
                                <a href="/documents/file/{{idSubcarpeta}}_{{idPersonal}}">
                                    <img src="/assets/img/folder.png" alt="" width="50%">
                                    <p>{{nombreSubcarpeta}}</p>
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}