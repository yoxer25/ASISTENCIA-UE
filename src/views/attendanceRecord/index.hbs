<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-assignment-o zmdi-hc-fw"></i> Asistencia
                <small>Listado</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-5">
                <a href="/attendanceRecords/importData"><button class="btn btn-raised btn-sm"
                        style="background-color: #01579B;">
                        <p style="font-size: 15px; margin: auto; color: #fff;"><i class="zmdi zmdi-upload"></i> Importar
                            Excel</p>
                    </button></a>
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <form action="/attendanceRecords" method="POST" id="attendanceForm">
                            {{>consultaFechas/frm}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card table-wrapper">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th class="text-center">Documento</th>
                                    <th class="text-center">Nombres y Apellidos</th>
                                    <th class="text-center">Fecha Registro</th>
                                    <th class="text-center">Primera Entrada</th>
                                    <th class="text-center">Primera Salida</th>
                                    {{#if (eq turno "ue")}}
                                    <th class="text-center">Segunda Entrada</th>
                                    <th class="text-center">Segunda Salida</th>
                                    {{/if}}
                                    <th class="text-center">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody id="tablaRegistros">
                                {{#if (eq turno "ue")}}
                                {{#each attendanceRecord}}
                                <tr data-fecha="{{formatDateTimeIso fechaCreado}}">
                                    <td>{{dniPersonal}}</td>
                                    <td>{{nombrePersonal}}</td>
                                    <td>{{formatDate fechaRegistro}}</td>
                                    <td>{{defaultIfEmpty primeraEntrada "no marcó"}}</td>
                                    <td>{{defaultIfEmpty primeraSalida "no marcó"}}</td>
                                    <td>{{defaultIfEmpty segundaEntrada "no marcó"}}</td>
                                    <td>{{defaultIfEmpty segundaSalida "no marcó"}}</td>
                                    <td><a href="#!" id="myButton"
                                            class="btn-delete-attendanceRecord btn btn-danger btn-raised btn-xs"
                                            data-id="{{idRegistroAsistencia}}" data-personal="{{idPersonal}}"
                                            data-institucion="{{idInstitucion}}"><i class="zmdi zmdi-delete"></i></a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="8">No hay registros para mostrar</td>
                                </tr>
                                {{/each}}
                                {{else}}
                                {{#each attendanceRecord}}
                                <tr data-fecha="{{formatDateTimeIso fechaCreado}}">
                                    <td>{{dniPersonal}}</td>
                                    <td>{{nombrePersonal}}</td>
                                    <td>{{formatDate fechaRegistro}}</td>
                                    <td>{{defaultIfEmpty primeraEntrada "no marcó"}}</td>
                                    <td>{{defaultIfEmpty primeraSalida "no marcó"}}</td>
                                    <td><a href="#!" id="myButton"
                                            class="btn-delete-attendanceRecord btn btn-danger btn-raised btn-xs"
                                            data-id="{{idRegistroAsistencia}}" data-personal="{{idPersonal}}"
                                            data-institucion="{{idInstitucion}}"><i class="zmdi zmdi-delete"></i></a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="6">No hay registros para mostrar</td>
                                </tr>
                                {{/each}}
                                {{/if}}
                                
                            </tbody>
                        </table>
                        <ul class="pagination pagination-sm" id="pagination">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}

