<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-collection-pdf zmdi-hc-fw"></i> Documentos
                <small>{{dataPersonal.nombrePersonal}}</small>
            </h1>
            <a href="/documents/folder/{{file}}"><button class="btn btn-raised btn-sm"
                    style="background-color: #01579B;">
                    <p style="font-size: 15px; margin: auto; color: #fff;"><i class="zmdi zmdi-arrow-left"></i> Atrás
                    </p>
                </button></a>
        </div>
    </div>
    <div class="container-fluid">
        {{#if (eq user.rol "directivo")}}
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Importar Sesión de Trabajo</small>
                        </h1>
                        <form action="/documents/file/{{idCarpeta}}" method="POST" enctype="multipart/form-data">
                            <div>
                                <label>ARCHIVO PDF</label>
                                <input type="file" accept=".pdf" name="pdfProfesor">
                            </div>
                            <p class="text-center">
                                <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                    <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                            class="zmdi zmdi-upload"></i> Importar</p>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <h1 class="text-titles text-center">
                            <small>Sesiones de trabajo</small>
                        </h1>
                        <div class="row" style="padding-top: 3%;">
                            <table class="table table-hover text-center">
                                <thead>
                                    <tr>
                                        <th class="text-center">Documento</th>
                                        <th class="text-center">Fecha Importado</th>
                                        <th class="text-center">Hora Importado</th>
                                        <th class="text-center">Ver</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each documents}}
                                    <tr>
                                        <td>{{nombreOriginal}}</td>
                                        <td>{{formatDate fechaCreado}}</td>
                                        <td>{{formatTimeDocument fechaCreado}}</td>
                                        <td>
                                            <a href="/documents/view/{{nombreDocumento}}" target="_blank"
                                                class="btn btn-info btn-raised btn-xs">
                                                <i class="zmdi zmdi-collection-pdf"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td colspan="4">No hay registros para mostrar</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <ul class="pagination pagination-sm" id="pagination">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}

<script>
    const current = ({{{ convertJson current }}});
    const pages = ({{{ convertJson pages }}});
    const idCarpeta = ({{{ convertJson idCarpeta }}});

    const numPages = (num) => {
        let navPages = '';

        if (num) {
            var i = (Number(current) > 5 ? Number(current) - 4 : 1);
            for (; i <= (Number(current) + 4) && i <= num; i++) {
                let fila = '<ul class="pagination pagination-sm" id="pagination">';
                if (i == current) {
                    fila += '<li class="active">';
                } else {
                    fila += '<li>';
                }
                if (i === Number(current) - 4 && i < num) {
                    fila += `<a href="#">...</a>`;
                }
                if (i === Number(current) + 4 && i < num) {
                    fila += `<a href="#">...</a>`;
                }
                fila += `<a href="/documents/file/${idCarpeta}?page=${i}">${i}</a>`;
                fila += "</li></ul>";
                navPages += fila;
            }
        }
        return navPages
    }
    document.getElementById("pagination").innerHTML =
        numPages(pages);

</script>