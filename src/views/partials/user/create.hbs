<div class="row">
    <div class="col-md-6">
        <div class="form-group label-floating">
            <label class="control-label">Rol del Usuario</label>
            <select class="form-control" id="rolUser" name="rolUser">
                <option value="{{userDB.idRol}}" selected>{{userDB.nombreRol}}</option>
                {{#each rolUser}}
                <option value="{{idRolUsuario}}">{{nombreRol}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group label-floating">
            <label class="control-label">Contraseña</label>
            <input class="form-control" type="password" id="formPassword" name="formPassword">
        </div>
        <div class="form-group label-floating">
            <label class="control-label">Correo electrónico</label>
            <input class="form-control" type="email" id="email" name="email">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group label-floating">
            <label class="control-label">DNI</label>
            <input class="form-control" type="text" id="dni" name="dni">
        </div>
        <div class="form-group label-floating">
            <label class="control-label">I.E</label>
            <select class="form-control" id="username" name="username" style="width: 100%;">
                <option value="{{userDB.idInstitucion}}" selected>{{userDB.nombreInstitucion}}</option>
                {{#each institution}}
                <option value="{{idInstitucion}}">{{nombreNivel}} - {{nombreInstitucion}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>