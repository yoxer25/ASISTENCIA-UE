<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-assignment-o zmdi-hc-fw"></i> Asistencia
                <small>Listado</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-5">
                <a href="/attendanceRecords/importData"><button class="btn btn-raised btn-sm"
                        style="background-color: #01579B;">
                        <p style="font-size: 15px; margin: auto; color: #fff;"><i class="zmdi zmdi-upload"></i> Importar
                            Excel</p>
                    </button></a>
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <form action="/attendanceRecords" method="POST" id="attendanceForm">
                            {{>consultaFechas/frm}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card table-wrapper">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th class="text-center">Documento</th>
                                    <th class="text-center">Nombres y Apellidos</th>
                                    <th class="text-center">Fecha Registro</th>
                                    <th class="text-center">Primera Entrada</th>
                                    <th class="text-center">Primera Salida</th>
                                    <th class="text-center">Segunda Entrada</th>
                                    <th class="text-center">Segunda Salida</th>
                                    <th class="text-center">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each attendanceRecord}}
                                <tr>
                                    <td>{{dniPersonal}}</td>
                                    <td>{{nombrePersonal}}</td>
                                    <td>{{formatDate fechaRegistro}}</td>
                                    <td>{{primeraEntrada}}</td>
                                    <td>{{primeraSalida}}</td>
                                    <td>{{segundaEntrada}}</td>
                                    <td>{{segundaSalida}}</td>
                                    <td>
                                        <form action="/attendanceRecords/{{idRegistroAsistencia}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger btn-raised btn-xs"><i
                                                    class="zmdi zmdi-delete"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="8">No hay registros para mostrar</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <ul class="pagination pagination-sm" id="pagination">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}

<script src="/js/functions.js"></script>

<script>
    const current = ({{{ convertJson current }}});
    const pages = ({{{ convertJson pages }}});
    const option = ({{{ convertJson option }}});

    const ie = document.getElementById("ie");

    if (listUser.rol === "directivo") {
        document.getElementById('ie').readOnly = true;
    };
    const numPages = (num) => {
        let navPages = '';

        if (pages) {
            let i = (Number(current) > 5 ? Number(current) - 4 : 1);
            for (; i <= (Number(current) + 4) && i <= pages; i++) {
                let fila = '<ul class="pagination pagination-sm" id="pagination">';
                if (i == current) {
                    fila += '<li class="active">';
                } else {
                    fila += '<li>';
                }
                if (i === Number(current) - 4 && i < pages) {
                    fila += `<a href="#">...</a>`;
                }
                if (i === Number(current) + 4 && i < pages) {
                    fila += `<a href="#">...</a>`;
                }
                fila += `<a id="enlace href="#" onclick="submitAttendanceForm(${i}); return false;">${i}</a>`;
                fila += "</li></ul>";
                navPages += fila;
            }
        }
        return navPages
    }
    document.getElementById("pagination").innerHTML =
        numPages(pages);

    function submitAttendanceForm(i) {
        const page = document.getElementById("page")
        page.value = i;
        document.getElementById('attendanceForm').submit();
    }

    document.querySelector(`#${option}`).checked = true;

</script>