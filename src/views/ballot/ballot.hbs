<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-collection-text zmdi-hc-fw"></i> Papeletas de salida
                <small>Listado</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-4">
                {{#if (eq user.rol "otros")}}
                <a href="/ballots/create">{{>btn-new}}</a>
                {{/if}}
            </div>
            {{#if (or (eq user.rol "administrador") (eq user.rol "otros"))}}
            <div class="col-lg-8" id="formSearchPersonal">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <form action="/ballots" method="POST" id="consultForm">
                            {{>ballot/search}}
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card table-wrapper">
                    <div class="card-body rounded-bottom bg-white p-5">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th class="text-center">Fecha</th>
                                    <th class="text-center">N° Papeleta</th>
                                    <th class="text-center">Solicitante</th>
                                    <th class="text-center">Ausente Desde</th>
                                    <th class="text-center">Ausente Hasta</th>
                                    <th class="text-center">Motivo</th>
                                    <th class="text-center">VB Jefe de Área</th>
                                    <th class="text-center">VB RRHH</th>
                                    <th class="text-center">VB Administración</th>
                                    <th class="text-center">Ver Papeleta</th>
                                    {{#if (noeq area 0)}}
                                    <th class="text-center">Acciones</th>
                                    {{/if}}
                                </tr>
                            </thead>
                            <tbody>
                                {{#each ballots}}
                                <tr>
                                    <td>{{formatDate fechaPapeleta}}</td>
                                    <td>{{numeroPapeleta}}</td>
                                    <td>{{nombrePersonal}}</td>
                                    {{#if desdeDia}}
                                    <td>{{formatDate desdeDia}}</td>
                                    {{else}}
                                    <td>{{desdeHora}}</td>
                                    {{/if}}
                                    {{#if hastaDia}}
                                    <td>{{formatDate hastaDia}}</td>
                                    {{else}}
                                    <td>{{hastaHora}}</td>
                                    {{/if}}
                                    <td>{{motivo}}</td>
                                    {{#if VBjefe}}
                                    <td>
                                        <p style="background-color: rgb(2, 255, 2);">Aceptado</p>
                                    </td>
                                    {{else}}
                                    <td>
                                        <p style="background-color: rgb(2, 238, 255);">Pendiente</p>
                                    </td>
                                    {{/if}}
                                    {{#if VBrrhh}}
                                    <td>
                                        <p style="background-color: rgb(2, 255, 2);">Aceptado</p>
                                    </td>
                                    {{else}}
                                    <td>
                                        <p style="background-color: rgb(2, 238, 255);">Pendiente</p>
                                    </td>
                                    {{/if}}
                                    {{#if VBadministracion}}
                                    <td>
                                        <p style="background-color: rgb(2, 255, 2);">Aceptado</p>
                                    </td>
                                    {{else}}
                                    <td>
                                        <p style="background-color: rgb(2, 238, 255);">Pendiente</p>
                                    </td>
                                    {{/if}}
                                    <td><a href="#!" class="btn-info-ballot btn btn-info btn-raised btn-xs"
                                            data-id="{{idPapeleta}}" data-dateballot="{{formatDate fechaPapeleta}}"
                                            data-ballot="{{numeroPapeleta}}" data-applicant="{{nombrePersonal}}"
                                            data-dependency="{{nombreArea}}"
                                            data-workingcondition="{{condicionLaboral}}" data-reason="{{motivo}}"
                                            data-foundation="{{fundamento}}" {{#if desdeDia}}
                                            data-startDate="{{formatDate desdeDia}}" {{else}}
                                            data-startTime="{{desdeHora}}" {{/if}} {{#if hastaDia}}
                                            data-endDate="{{formatDate hastaDia}}" {{else}} data-endTime="{{hastaHora}}"
                                            {{/if}}><i class="zmdi zmdi-eye"></i></a></td>
                                    {{#if (and (eq ../area 6) (not VBrrhh))}}
                                    <td>
                                        <form action="/ballots/approve/{{idPapeleta}}?_method=PATCH" method="POST">
                                            <input type="hidden" name="_method" value="PATCH">
                                            <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                                <p style="font-size: 15px; margin: auto; color: #fff;"><i
                                                        class="zmdi zmdi-badge-check"></i> Aprobar</p>
                                            </button>
                                        </form>
                                    </td>
                                    {{else if (and (eq ../area 2) (not VBadministracion))}}
                                    <td>
                                        <form action="/ballots/approve/{{idPapeleta}}?_method=PATCH" method="POST">
                                            <input type="hidden" name="_method" value="PATCH">
                                            <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                                <p style="font-size: 15px; margin: auto; color: #fff;"><i
                                                        class="zmdi zmdi-badge-check"></i> Aprobar</p>
                                            </button>
                                        </form>
                                    </td>
                                    {{else if (and (eq ../area dependencia) (or (eq ../area 1) (eq ../area 3) (eq ../area 4) (eq ../area 5)) (not
                                    VBjefe))}}
                                    <td>
                                        <form action="/ballots/approve/{{idPapeleta}}?_method=PATCH" method="POST">
                                            <input type="hidden" name="_method" value="PATCH">
                                            <button class="btn btn-raised btn-sm" style="background-color: #01579B;">
                                                <p style="font-size: 15px; margin: auto; color: #fff;"><i
                                                        class="zmdi zmdi-badge-check"></i> Aprobar</p>
                                            </button>
                                        </form>
                                    </td>
                                    {{else}}
                                    <td></td>
                                    {{/if}}
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="10">No hay registros para mostrar</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <ul class="pagination pagination-sm" id="pagination">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}

<script>
    const current = ({{{ convertJson current }}});
    const pages = ({{{ convertJson pages }}});
    const option = ({{{ convertJson option }}})
    const numPages = (num) => {
        let navPages = '';

        if (num) {
            var i = (Number(current) > 5 ? Number(current) - 4 : 1);
            for (; i <= (Number(current) + 4) && i <= num; i++) {
                let fila = '<ul class="pagination pagination-sm" id="pagination">';
                if (i == current) {
                    fila += '<li class="active">';
                } else {
                    fila += '<li>';
                }
                if (i === Number(current) - 4 && i < num) {
                    fila += `<a href="#">...</a>`;
                }
                if (i === Number(current) + 4 && i < num) {
                    fila += `<a href="#">...</a>`;
                }
                if (option !== null) {
                    fila += `<a id="enlace href="#" onclick="enviar_formulario(${i}); return false;">${i}</a>`;
                } else {
                    fila += `<a href="/ballots/page${i}">${i}</a>`;
                }
                fila += "</li></ul>";
                navPages += fila;
            }
        }
        return navPages
    }
    document.getElementById("pagination").innerHTML =
        numPages(pages);

    function enviar_formulario(i) {
        const page = document.getElementById("page")
        page.value = i;
        document.getElementById('consultForm').submit();
    }

</script>