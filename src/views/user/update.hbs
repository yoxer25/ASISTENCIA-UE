<!-- Content page-->
<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i> Usuarios
                <small>Actualizar</small>
            </h1>
            </h1>
        </div>
    </div>
    <div class="container-fluid py-5 px-sm-3 px-lg-5" style="margin-top: 15px;">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card">
                    <div class="card-header bg-primary text-center">
                        <p class="text-white" style="font-size: 40px;">Actualizar Usuario</p>
                    </div>
                    <div class="card-body rounded-bottom bg-white p-5">
                        <form id="personalForm" action="/users/{{userDB.idUsuario}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Rol del Usuario</label>
                                        <select class="form-control" id="rolUser" name="rolUser">
                                            <option value="{{userDB.idRol}}" selected>{{userDB.nombreRol}}</option>
                                            {{#each rolUser}}
                                            <option value="{{idRolUsuario}}">{{nombreRol}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        <label class="control-label">I.E</label>
                                        <select class="form-control" id="username" name="username" style="width: 100%;">
                                            <option value="{{userDB.idInstitucion}}" selected>
                                                {{userDB.nombreInstitucion}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <p class="text-center">
                                <button class="btn btn-raised btn-sm" style="background-color: #01579B;" type="submit">
                                    <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                            class="zmdi zmdi-floppy"></i> Actualizar</p>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer/footer}}
</section>

{{>navigation/navigation}}