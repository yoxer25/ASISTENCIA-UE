<div style="background-image: url(/assets/img/loginFont.jpg); height: 100%; width: 100%;">
    <form action="/myaccount/signIn" method="POST" autocomplete="off" class="full-box logInForm">
        <p class="text-center text-muted"><i class="zmdi zmdi-account-circle zmdi-hc-5x"></i></p>
        <p class="text-center text-muted text-uppercase">Inicia sesión con tu cuenta</p>
        <div class="form-group label-floating">
            <label class="control-label" for="UserCode">Usuario</label>
            <input class="form-control" name="userName" id="userName" type="text">
            <p class="help-block">Escribe tu usuario</p>
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="UserPass">Contraseña</label>
            <input class="form-control" name="userPassword" id="userPassword" type="password">
            <p class="help-block">Escribe tu contraseña</p>
        </div>
        <div class="form-group text-center">
            <a href="/myaccount/forgot-password">
                <p>¿Olvidaste tu contraseña?</p>
            </a>
            <button class="btn btn-raised btn-primary" style="background-color: #01579B; margin: auto;" type="submit"><p style="margin: auto;">Iniciar Sesión</p></button>
        </div>
    </form>
</div>