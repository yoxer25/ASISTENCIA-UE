<section class="full-box dashboard-contentPage">
    {{>navigation/navbar}}
    </nav>
    <!-- Content page -->
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-assignment-account zmdi-hc-fw"></i> Actualizar
                <small>Contraseña</small>
            </h1>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6" id="formSearchPersonal">
                <div class="card">
                    <div class="card-body rounded-bottom bg-white">
                        <div class="card-header bg-primary text-center">
                            <p class="text-white" style="font-size: 30px;">Actualizar Contraseña</p>
                        </div>
                        <form id="passwordForm" action="/myaccount/update{{user.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="form-group">
                                <label class="control-label">Nueva Contraseña</label>
                                <input class="form-control" type="password" id="newPassword" name="newPassword">
                            </div>
                            <div class="form-group" style="margin: auto; text-align: center;">
                                <button class="btn btn-raised btn-sm" style="background-color: #01579B; margin: auto;">
                                    <p style="font-size: 20px; margin: auto; color: #fff;"><i
                                            class="zmdi zmdi-floppy"></i> Actualizar</p>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer/footer}}
</section>